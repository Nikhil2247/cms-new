# =============================================================================
# CMS Backend - Environment Template
# =============================================================================
# Copy this file to .env and fill in your values
# For Docker deployment, use root .env file with docker-compose
# =============================================================================

# Application
NODE_ENV=development
PORT=5000

# =============================================================================
# Database - MongoDB
# =============================================================================
# Development (MongoDB Atlas):
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database"
# Docker deployment uses mongodb://cmsuser:cmspassword123@mongodb:27017/cms?authSource=cms

# =============================================================================
# Cache - DragonflyDB (Redis-compatible)
# =============================================================================
# Development (Docker container on localhost):
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# Docker deployment uses redis://dragonfly:6379

# =============================================================================
# File Storage - MinIO (S3-compatible)
# =============================================================================
# Development (Docker container on localhost):
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=cms-uploads
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_REGION=us-east-1
# Docker deployment uses http://minio:9000

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# CORS - Allowed Origins
# =============================================================================
# Development:
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
# Docker deployment uses http://localhost,http://127.0.0.1

# =============================================================================
# Rate Limiting
# =============================================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =============================================================================
# Logging
# =============================================================================
# development: debug, production: info
LOG_LEVEL=debug

# =============================================================================
# File Upload
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# =============================================================================
# Multi-tenant
# =============================================================================
DEFAULT_INSTITUTION_ID=main_campus

# =============================================================================
# Portal URL (for emails, links)
# =============================================================================
PORTAL_URL=http://localhost:5173

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# =============================================================================
# Google OAuth (Optional)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/redirect

# =============================================================================
# Cloudinary (Optional)
# =============================================================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# Firebase (Optional)
# =============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
